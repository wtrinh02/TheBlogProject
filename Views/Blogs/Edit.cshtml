@model TheBlogProject.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<h1 class="d-flex justify-content-center">Edit</h1>

<h4 class="d-flex justify-content-center">Blog</h4>
<hr />
<div class="row d-flex justify-content-center pt-3 pb-3">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="NewImage" class="form-control" accept=".jpg,.png,.gif,.jpeg" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group pt-2">
                <input type="submit" value="Save" class="btn btn-primary btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="link-underline-primary">
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
